// common event & blog
.top-banner-tomo {
    background: url(assets/images/bg_main_ev_bl.jpg) no-repeat center;
    /*background-size: auto 100%;*/
    height: 270px;
    display: flex;
    margin: 1em 0;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    @media only screen and (min-width: 1025px) and (max-width: 1366px) {
        height: 160px;
        background-size: 100% auto;
        margin: 0 0 1em;
    }
    @include media-breakpoint-down(lg) {
        margin: 0 0 1em;
    }
    @include media-breakpoint-down(sm) {
        margin: 0 0 1em;
        height: 150px;
    }
    &:before {
        background-repeat: no-repeat;
        background-position: center;
        background-size: 350px auto;
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
        @include media-breakpoint-down(lg) {
            background-size: 250px auto;
        }
        @include media-breakpoint-down(sm) {
            background-size: 200px auto;
        }
    }
    &.page-post {
        &:before {
            background-image: url(assets/images/BLOG.png);
            background-size: 300px auto;
        }
        .container {
            h2 {
                margin-top: 60px;
            }
        }
    }
    &.page-event {
        &:before {
            background-image: url(assets/images/EVENTS.png);
        }
    }
    .container {
        position: relative;
        z-index: 1;
        h2 {
            margin-top: 44px;
            font-family: 'Bai Jamjuree', sans-serif;
            @include media-breakpoint-down(lg) {
                margin-top: 25px;
            }
            @include media-breakpoint-down(sm) {
                margin-top: 25px;
                font-size: 18px;
            }
        }
    }
}//blog-banner-tomo
.event-cat-filter {
    margin: 0 0 30px;
    padding: 0;

    @include media-breakpoint-up(md) {
        margin-bottom: 50px;
    li {
        list-style: none;
        display: inline-block;
        vertical-align: middle;
        margin: 0 0 0 20px;
        padding: 0;

        &:first-child {
            margin-left: 0;
        }

        a {
            position: relative;
            display: block;
            font-size: 16px;
            text-transform: capitalize;
            color: #9eaacc;
            padding-bottom: 10px;

            &:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                max-width: 40px;
                height: 2px;
                transition: transform .5s cubic-bezier(.8, 0, .2, 1);
                transform: scale3d(0, 1, 1);
                transform-origin: 100% 50%;
                background-color: #e68b71;
            }
        }

        &.selected,
        &:hover {

            a {
                color:#fff;

                &:after {
                    transform: scale3d(1,1,1);
                    transform-origin: 0 50%;
                }
            }
        }
    }
}

.event-content-tomo .event {
    margin-bottom: 50px;

    .entry-img {
        overflow: hidden;
        margin-bottom: 15px;

        img {
            @extend %transit;
        }

        @include media-breakpoint-up(sm) {
            margin-bottom: 20px;
        }
    }

    .entry-title {

        @include media-breakpoint-up(md) {
            font-size: 20px;
        }

        span.event-venue {
            font-size: 16px;
            color: #808aa9;
        }

        @include media-breakpoint-up(md) {
            font-size: 18px;
        }
    }

    &:hover .entry-img img {
        transform: scale(1.05);
    }
}

.blog-content-tomo {
    .post-cat-filter {
        margin: 0;
        padding: 0;
        display: flex;
        @include media-breakpoint-down(md) {
            justify-content: center;
            align-items: center;
        }
        &:before,
        &:after {
            clear: both;
            display: table;
            content: "";
        }
        li {
            list-style: none;
            margin: 0;
            padding: 0;
            margin-left: 3em;
            &:first-child {
                margin-left: 0;
            }
            @include media-breakpoint-down(sm) {
                margin: 0 0.5em;
            }
            a {
                display: block;
                color: #9eaacc;
                padding: .7em 0;
                text-decoration: none;
                position: relative;
                font-size: 18px;
                &:after {
                    content: '';
                    position: absolute;
                    bottom: 0px;
                    left: 0;
                    width: 100%;
                    max-width: 40px;
                    height: 2px;
                    -webkit-transition: -webkit-transform .5s cubic-bezier(.8,0,.2,1);
                    transition: -webkit-transform .5s cubic-bezier(.8,0,.2,1);
                    transition: transform .5s cubic-bezier(.8,0,.2,1);
                    transition: transform .5s cubic-bezier(.8,0,.2,1),-webkit-transform .5s cubic-bezier(.8,0,.2,1);
                    -webkit-transform: scale3d(0,1,1);
                    transform: scale3d(0,1,1);
                    -webkit-transform-origin: 100% 50%;
                    transform-origin: 100% 50%;
                    background-color: #e68b71;
                }
            }
            &.selected,&:hover {
                a {
                    color:#fff;
                    &:after {
                        -webkit-transform: scale3d(1,1,1);
                        transform: scale3d(1,1,1);
                        -webkit-transform-origin: 0 50%;
                        transform-origin: 0 50%;
                        @include media-breakpoint-down(sm) {
                            left: 50%;
                            transform: translateX(-50%);
                        }
                    }
                }
            }
        }
    }//post-cat-filter
    article {
        margin-bottom: 1em;
        .inner {
            position: relative;
            .box-content {
                /*text-align: center;*/
                .entry-img {
                    margin-bottom: 1.5em;
                    display: block;
                    @include media-breakpoint-up(md) {
                        height: 175px;
                        overflow: hidden;
                    }
                    @include media-breakpoint-down(sm) {
                        margin-bottom: 1em;
                    }
                    img {
                        transition: all .5s ease;
                        display: block;
                    }
                }
                .entry-header {
                    .entry-title {
                        font-size: 18px;
                        font-weight: 400;
                        line-height: 1.4;
                        color: #ebeaf5;
                        margin-top: 0;
                        margin-bottom: 10px;

                        a {
                            color: #ebeaf5;
                        }

                        @include media-breakpoint-up(md) {
                            font-size: 18px;
                        }
                    }
                }
            }
        }//inner
        //article_hover
        &:hover {
            .inner {
                .entry-img {
                    img {
                        transform: scale(1.04);
                    }
                }
            }
        }
    }

}

.tomo_detail {
    .top-banner-tomo {
        margin-bottom: 4em;
        @include media-breakpoint-down(lg) {
            margin-bottom: 3em;
        }
        @include media-breakpoint-down(sm) {
            margin-bottom: 1em;
        }
    }

    .post-thumbnail {
        margin-bottom: 1em;
    }

    //search silebar
    .search-form {
        border-bottom: 1px solid #9eaacc;
        position: relative;
        label {
            display: block;
            padding-right: 50px;
        }
        input[type=search],
        input[type=submit] {
            background: transparent;
            border: 0;
            padding: 0;
            &::placeholder {
              color: #9eaacc;
              font-size: 14px;
              font-family: 'Quicksand', sans-serif;
            }
        }
        input[type=submit] {
            background: url(assets/images/icon_search.svg) no-repeat 95%;
            background-size: 14px auto;
            border-radius: 0;
            cursor: pointer;
            position: absolute;
            right: 0;
            top: 0;
            font-size: 0;
            height: 100%;
            width: 50px;
        }
    }
}
